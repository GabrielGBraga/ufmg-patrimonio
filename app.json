{
  "expo": {
    "scheme": "acme",
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow this app to access your camera",
          "microphonePermission": "Allow this app to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "name": "Patrimonio UFMG",
    "slug": "patrimonio-ufmg",
    "version": "1.0.0",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff" 
    },
    "userInterfaceStyle": "automatic",
    "extra": {
      "router": {},
      "eas": {
        "projectId": "37c52e42-ed0b-40d0-81c4-3aa36749fc50"
      }
    },
    "android": {
      "userInterfaceStyle": "automatic",
      "package": "com.gabrielgbraga.patrimonioufmg",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "runtimeVersion": {
      "policy": "1.0.0"
    },
    "updates": {
      "url": "https://u.expo.dev/37c52e42-ed0b-40d0-81c4-3aa36749fc50"
    },
    "ios": {
      "userInterfaceStyle": "automatic",
      "bundleIdentifier": "com.gabrielgbraga.patrimonioufmg",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    }
  }
}
